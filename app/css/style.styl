	font-size: 10px

.owl-next,.owl-prev
	position absolute
	top 50%
	margin-top -30px
	color white
	font-size 40px
.owl-carousel
	position relative
.owl-prev
	+below(768px)
		left 2%
	left 1%
.owl-next
	+below(768px)
		right 2%
	right 1%
.slider-control
	size 40
	fill white
.owl-dots
	width 100%
	flex(mid)
	margin-top -60px
	position relative
	z-index 2000
.owl-dot
	round()
	margin 10px
	width 14px
	height 14px
	background-color #ffffff
	opacity 0.5
.owl-dot.active
	background white
	opacity 1

