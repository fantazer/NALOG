@import 'rupture'
@import "variable/_function.styl"
@import "icon/sprite.css"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/_constant.styl"
@import "variable/_grid.styl"
@import "variable/_ie.styl"
@import "variable/_elements.styl"

rupture.scale = 0 480px 768px 992px 1200px
rupture.scale-names = 'xs' 'sm' 'md' 'lg'

// Grid breakpoints
$breakpoints = {
	'xs' :  0,
	'sm' : 480px,
	'md' : 768px,
	'lg' : 992px,
	'xl' : 1200px
}

// Number of columns
$columns = 12

init($breakpoints, $columns)

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.4
	letter-spacing 0.01em
	
.main-cont
	center(1170px,10px)

.col
	padding-top: 0
	margin: 0
.nice-select
	br(0)
	margin-bottom: 20px
	display: block
	color #000000
	font-size 14px
	font-weight 700
	.list
		width: calc(100% )
		left 0px
		br(0)
		border 0px solid $border-color
		border-top 0
		margin-top: 0

select.select-beauty
	display: none!important

.nice-select:active, .nice-select.open, .nice-select:focus
	border 1px solid $border-color

.element-select
	padding: 20px 0

.element-grid
	text-align: center
	padding: 20px
	border 1px solid $border-color

.element-row
	margin-bottom: 20px

.nice-select
	float: none

.coner-wrap
	position: relative

.window-coner-top
	position: absolute
	size: 16px
	background: white
	top: -8px
	transform: rotate(45deg)
	left: 50%
	margin-left: -8px
	border 1px solid $border-color

.input-row
	position: relative

.input-placeholder-val
	position: absolute
	left 20px
	top 20px
	tr(all)
	color #888888

.input-animate
	display: inline-block
	z-index 20
	color black

.input-animate:focus+span,
.input-animate[data-empty="false"] + span
