@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "icon/sprite.css"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/_constant.styl"
@import "variable/_grid.styl"
@import "variable/_elements.styl"

rupture.scale = 0 480px 768px 992px 1200px
rupture.scale-names = 'xs' 'sm' 'md' 'lg'

// Grid breakpoints
$breakpoints = {
	'xs' :  0,
	'sm' : 480px,
	'md' : 768px,
	'lg' : 992px,
	'xl' : 1200px
}

// Number of columns
$columns = 12

init($breakpoints, $columns)

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1
	letter-spacing 0.01em
	
.main-cont
	center(1170px,10px)

.owl-next,.owl-prev
	position absolute
	top 50%
	margin-top -30px
	color white
	font-size 40px
.owl-carousel
	position relative
.owl-prev
	+below(768px)
		left 2%
	left 1%
.owl-next
	+below(768px)
		right 2%
	right 1%
.slider-control
	size 40
	fill white
.owl-dots
	width 100%
	flex(mid)
	margin-top -60px
	position relative
	z-index 2000
.owl-dot
	round()
	margin 10px
	width 14px
	height 14px
	background-color #ffffff
	opacity 0.5
.owl-dot.active
	background white
	opacity 1

.slider-main__el
	height: 600px
	width: 100%
	bg-full()
	position: relative
	.main-cont
		height: 100%

.slider-main__filter
	position: absolute
	width: 100%
	height: 100%
	top 0
	left: 0
	background: rgba(0, 0, 0, 0.45)

.slider-main__title
	font-size: 36px
	font-weight:300
	color white
	margin-bottom: 30px
	line-height: 52px

.slider-main__text
	font-size: 24px
	font-weight:300
	color white
	margin-bottom: 30px
	line-height: 40px

.slider-main__el-wrap
	width: 50%
	flex(mid)
	height: 100%

.slider-main__content
	margin-top: 75px

@import "../module/**/*"
