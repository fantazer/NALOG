/*! block navbars*/
.nav-get-ndfl
	+below(768px)
		max-width 350px
		margin: 0 auto 30px auto
	box-shadow 0 10px 20px rgba(196, 208, 227, 0.5)
	border-radius 4px
	background-color #ffffff
	overflow: hidden
	margin-bottom: 30px
	display: block

.nav-get-ndfl__img
	height: 230px
	bg-full()

.navbar-title
	+below(768px)
		font-size:18px
	font-size 26px
	font-weight 300
	padding: 20px

.nav-get-ndfl__link
	padding: 20px

.navbar-menu
	box-shadow 0 10px 20px rgba(196, 208, 227, 0.5)
	border-radius 4px
	background-color #ffffff
	.navbar-menu__el
		&:first-child
			border-top 1px solid #dddddd!important



.navbar-menu__el--sub
	display: block
	padding: 20px
	padding-left:40px
	border-top 1px solid rgba(213, 213, 213, 0.4) !important
	background: #ededed
.navbar-menu__el
	display: block
	border-bottom 1px solid #dddddd

.navbar-menu__el-link
	+below(768px)
		font-size: 14px
	//padding: 20px
	display: block
	cp()
	flex(between)
	tr(all)
	span
		padding: 20px
	.icon-el
		size 11px
		tr(all)
	&:hover
		background: #f2f2f2
		.navbar-menu__el-icon
			background: white

.navbar-menu__el-icon
	padding: 10px
	flex(mid)
	br(50%)
	//background: #efefef
	margin-right: 20px
	border 1px solid #d8d5d5

.navbar-menu__el-link--active
	background: #f2f2f2
	.navbar-menu__el-icon
		background: white
	.icon-el
		//fill white
		transform rotate(180deg)
.navbar-menu__sub
	display: none

/*!block navbars end */