/*! block header*/
.header
	background-color rgba(0, 0, 0, 0.25)

.header-logo
	+below(1024px)
		width: 100px
	height: 40px
	width: 15%
	flex(mid)
	img
		width: 100%
.header-wrap
	flex(between)

.header-tools
	+below(1024px)
		width: 240px
	+below(768px)
		position: initial
	+below(640px)
		width: 100px
	f()
	position: relative
	height: 100%
	align-items: center
	width: 20%
	.icon-el
		size 16px
		fill white

.header-nav__el-link-wrap
	+below(1024px)
		border-bottom:1px solid rgba(236, 236, 236, 0.09)
	flex(between)

.menu-toggle
	+above(1024px)
		display: none
	.icon-el
		cp()
		size 20px
		margin-top: 6px
.header-nav__el
	+below(1200px)
		font-size: 12px
	+below(1024px)
		width: 100%
		text-align: center
		background: blue
		font-size: 14px
	font-size: 14px
	position: relative
	.icon-el
		size 10px
		fill white
		margin-left: 5px
		tr(all)
	&:hover
		&>.header-nav__sub
			opacity 1
			visibility visible
		.header-nav__sub
			transform translateY(0px)
		.icon-el
			+above(1024px)
				transform rotate(-180deg)

.header-nav__el-link
	+below(1024px)
		width: 100%
		flex(between)
		padding: 20px 10px
	padding: 30px 0
	display: inline-block
	color white

.header-nav__el-icon
	+below(1024px)
		cp()
		flex(mid)
		background: #2a6f9c
		size: 60px
		.icon-el
			size 15px

.header-cab
	+below(640px)
		width: 100%
		flex(mid)

	f()
	cp()
	align-items: center
	width: 80%
	height: 80px
	&:hover
		.header-auth
			opacity 1
			visibility visible
			transform translateY(0px)
	.icon-el
		+below(640px)
			margin-right: 0
		margin-right: 15px

.header-search
	+below(768px)
		position: initial
		.coner-wrap
			display: none
	cp()
	size: 16px
	height: 80px
	flex(mid)
	//position: relative
	fl()
	&:hover
		.header-search-form
			opacity 1
			visibility visible
			transform translateY(00px)

.header-search-form
	+below(768px)
		left: 0
		width: 100%
		br(0)
		border 0
	tr(all)
	position: absolute
	top: 100%
	transform translateY(20px)
	border-radius 4px
	border 1px solid #dddddd
	opacity 0
	visibility hidden
	left: -155px


.header-search-form-wrap
	+below(768px)
		padding: 20px
		input
			br(0)
	padding: 20px
	position: relative
	background: white

.input-search
	+below(768px)
		width: 100%
	padding: 10px
	border-radius 4px 0px 0px 4px

.btn-search
	@extend .btn--blue
	@extend .btn--md
	padding: 10px 20px
	font-size: 12px
	border-radius 0px 4px 4px 0px
.search-row
	f()
	input
		margin-bottom: 0


.header-cab__name
	+below(640px)
		display: none
	color white
	font-size: 14px
	margin-top: 3px

.header-tools__divider
	+below(640px)
		display: none
	width: 1px
	height: 32px
	background-color rgba(255, 255, 255, 0.5)
	margin: 0 15px

.header-nav
	+below(1024px)
		position: absolute
		top: 100%
		width: 100%
		left: 0
		fw()
		display: none
	+above(1024px)
		display: flex !important
	width: 60%
	justify-content:space-around

.header-nav__sub
	+below(1024px)
		transform translateY(0px)
		position: initial
		width: 100%
		top: initital
		left: initial
		margin-left: 0px
		border-radius 0px
		opacity 1!important
		visibility visible!important
		transition initial
		.window-coner-top
			display: none
	tr(all)
	transform translateY(20px)
	position: absolute
	width: 180px
	top: 100%
	left: 50%
	margin-left: -90px
	border-radius 4px
	border 1px solid #dddddd
	background-color #ffffff
	opacity 0
	visibility hidden

.header-nav__sub-wrap
	position: relative
	background: white

.header-nav__sub--hidden
	opacity 0
	visibility hidden
	height: 0

.header-nav__sub-el
	+below(1024px)
		padding: 10px 0
	tr(all)
	padding: 20px
	display: block
	border-bottom:1px solid #f7f6f6
	z-index 5
	position: relative
	&:hover
		background: #f0f0f0
	&:last-child
		border-bottom: 0

.header-auth__wrap
	position: relative
	padding: 20px
	padding-top: 40px
	z-index 5
	background: white
	.window-coner-top
		left: 65%
		border 1px solid $border-color

.header-auth__check
	margin-bottom: 20px

.header-auth__get
	margin-bottom: 20px

.header-auth__link
	a
		tr(all)
		&:hover
			color blue
	flex(between)
	width: 100%

.header-auth
	+below(768px)
		br(0)
		width: 100%
		right: initial
		left: 0
		border 0px
		.coner-wrap
			display: none
	tr(all)
	position: absolute
	top: 100%
	right: 0
	transform translateY(20px)
	width: 300px
	border-radius 4px
	border 1px solid #dddddd
	background-color #ffffff
	opacity 0
	visibility hidden
	input
		width: 100%
		margin-bottom: 20px

.header-slider
	position: relative
	z-index 100

.header-container
	position: absolute
	z-index 100
	width: 100%

.header-contact
	+below(1200px)
		flex(mid)
	+below(768px)
		fw()
		justify-content: flex-start
	f()
	up()
	margin-top: 15px
	color white
	font-size 13px
	font-weight 400
	a
		color white

.header-contact__el
	+below(768px)
		border-right: 0
		font-size: 10px
		width: 100%
		padding-bottom: 2px
		margin-left: 5px
	&:last-child
		border 0
	padding: 6px 15px 6px 6px
	margin-right: 15px
	border-right 1px solid rgba(255, 255, 255, 0.5)
	//border-left 1px solid rgba(255, 255, 255, 0.5)

.slider-main
	+below(768px)
		.owl-nav
			display: none!important
.header-layer
	position: relative

/*!block header end */